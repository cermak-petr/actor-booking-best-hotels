{
    "title": "Booking Crawler input",
    "type": "object",
    "schemaVersion": 1,
    "properties": {
        "simple": {
            "title": "Simple scrape",
            "type": "boolean",
            "description": "Extract hotel list pages only (no detail)",
            "default": true
        },
        "search": {
            "title": "Booking search query",
            "type": "string",
            "description": "Query string to be searched on Booking.com",
            "default": "",
            "editor": "textfield"
        },
        "sortBy": {
            "title": "Order results by",
            "type": "string",
            "description": "Hotel attribute by which the results will be ordered",
            "default": "bayesian_review_score",
            "enum": [
                "bayesian_review_score",
                "popularity",
                "price",
                "review_score_and_price",
                "class",
                "class_asc",
                "distance_from_landmark"
            ],
            "enumTitles": [
                "Rating",
                "Popularity",
                "Price",
                "Rating and price",
                "Stars",
                "Stars ascending",
                "Distance from city centre"
            ]
        },
        "minScore": {
            "title": "Minimum rating",
            "type": "string",
            "description": "Minimum rating of a hotel",
            "default": "8.4",
            "editor": "textfield"
        },
        "maxPages": {
            "title": "Maximum pagination pages",
            "type": "integer",
            "description": "Number of pagination pages to be crawled",
            "default": 20,
            "maximum": 1000000
        },
        "concurrency": {
            "title": "Maximum concurrency",
            "type": "integer",
            "description": "Maximum number of parallel browser pages",
            "default": 10,
            "maximum": 50
        },
        "checkIn": {
            "title": "Check-in date (mm-dd-yyyy)",
            "type": "string",
            "description": "Check-in date",
            "default": "",
            "editor": "textfield"
        },
        "checkOut": {
            "title": "Check-out date (mm-dd-yyyy)",
            "type": "string",
            "description": "Check-out date",
            "default": "",
            "editor": "textfield"
        },
        "currency": {
            "title": "Preferred currency",
            "type": "string",
            "description": "Currency code to be set on the site",
            "default": "EUR",
            "editor": "textfield"
        },
        "language": {
            "title": "Language",
            "type": "string",
            "description": "Language code to be set on the site",
            "default": "en-gb",
            "editor": "textfield"
        },
        "proxyConfig": {
            "title": "Proxy configuration",
            "type": "object",
            "description": "Optionally use Apify Proxy",
            "default": { "useApifyProxy": true },
            "editor": "proxy"
        }
    },
    "required": ["search"]
}
